<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/secondary_text</item>


    </style>
</resources>
